<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/materialBlue"
        android:padding="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select, How You Like To Sort ?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/nameAsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Ascending"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            />

        <RadioButton
            android:id="@+id/nameDsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Descending"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/maxAffected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Affected Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/maxDeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Deaths Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/maxRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Recovered Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/affToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Affected Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/deathToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Deaths Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/recToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Recovered Country"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>
    </RadioGroup>

</LinearLayout>