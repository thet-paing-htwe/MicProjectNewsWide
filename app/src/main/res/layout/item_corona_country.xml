<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="1dp"
    >
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp"
        android:id="@+id/Nview1"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/Nview1"
        android:layout_marginStart="80dp"
        android:id="@+id/Nview2"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/Nview2"
        android:layout_marginStart="70dp"
        android:id="@+id/Nview3"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/Nview3"
        android:layout_marginStart="70dp"
        android:id="@+id/Nview4"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="80dp"
        android:id="@+id/Nview5"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="12dp"
        android:id="@+id/num"
        android:paddingHorizontal="2dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/materialBlue"
        android:layout_margin="1dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        android:id="@+id/newAff"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="10dp"
        android:background="@drawable/round_border"
        android:paddingHorizontal="2dp"
        android:backgroundTint="@color/materialYellow"
        android:layout_margin="1dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/Nview2"
        app:layout_constraintRight_toLeftOf="@+id/Nview3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        android:id="@+id/newDeaths"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="10dp"
        android:background="@drawable/round_border"
        android:paddingHorizontal="2dp"
        android:backgroundTint="@color/materialRed"
        android:layout_margin="1dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/Nview3"
        app:layout_constraintRight_toLeftOf="@+id/Nview4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11111111111"
        app:layout_constraintBottom_toTopOf="@+id/valueCard"
        android:id="@+id/newRec"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textSize="10dp"
        android:background="@drawable/round_border"
        android:paddingHorizontal="2dp"
        android:backgroundTint="@color/materialGreen"
        android:layout_margin="1dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/Nview4"
        app:layout_constraintRight_toLeftOf="@+id/Nview5"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/num"
        app:cardElevation="10dp"
        android:id="@+id/valueCard"
        android:foreground="?android:selectableItemBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valueConstraint"
            android:foreground="@drawable/border">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="60dp"
                android:id="@+id/Vview1"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview1"
                android:layout_marginStart="80dp"
                android:id="@+id/Vview2"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview2"
                android:layout_marginStart="70dp"
                android:id="@+id/Vview3"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview3"
                android:layout_marginStart="70dp"
                android:id="@+id/Vview4"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/Vview1"
                android:background="@color/materialBlue">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:foregroundGravity="center"
                app:cardElevation="10dp"
                app:cardCornerRadius="0dp"

                >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                android:id="@+id/flagValue"
                android:layout_gravity="center"
                android:src="@color/materialGreen"
                />
            </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/Vview1"
                app:layout_constraintRight_toLeftOf="@+id/Vview2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:text="Name"
                android:maxLines="2"
                android:id="@+id/nameValue"
                android:textStyle="bold"
                android:textColor="@color/materialBlue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@+id/Vview2"
                app:layout_constraintRight_toLeftOf="@+id/Vview3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Affected"
                android:gravity="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:id="@+id/TaffectedValue"
                android:background="@color/materialYellow"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@+id/Vview3"
                app:layout_constraintRight_toLeftOf="@+id/Vview4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Deaths"
                android:gravity="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:id="@+id/TdeathsValue"
                android:background="@color/materialRed"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@+id/Vview4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Recovered"
                android:gravity="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:id="@+id/TrecoveredValue"
                android:background="@color/materialGreen"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>